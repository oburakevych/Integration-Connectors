    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

        <oasis-ubl2.version>0.0.1</oasis-ubl2.version>
        <!-- third party -->
        <org.springframework.version>3.1.0.M2</org.springframework.version>
        <org.spring-social.version>1.0.0.RELEASE</org.spring-social.version>
        <org.spring-security.version>3.1.0.RC3</org.spring-security.version>
